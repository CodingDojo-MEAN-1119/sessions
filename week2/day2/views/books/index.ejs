<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Books</title>
</head>
<body>
    <nav>
      <ul>
        <li><a href="/authors">Authors</a></li>
        <li><a href="/books/new">Create Book</a></li>
      </ul>
    </nav>

    <main>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Pages</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% for (const book of books) { %>
            <tr>
              <td><a href="/books/<%= book._id %>"><%= book.title %></a></td>
              <td><a href="/authors/<%= book.author._id %>"><%= book.author.name %></a></td>
              <td><%= book.pages %></td>
              <td>Future Actions</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </main>
</body>
</html>
